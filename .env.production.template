# Production Environment Configuration for Quantum Trading AI
# Copy this file to .env.production and fill in your actual values
# NEVER commit .env.production to version control

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
ENVIRONMENT=production
APP_NAME=Quantum Trading AI
APP_VERSION=3.0.0
DEBUG=false
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=false

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-this
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# CORS Origins (comma-separated)
CORS_ORIGINS=https://quantumtrading.ai,https://www.quantumtrading.ai

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Supabase (Primary Database)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-role-key

# PostgreSQL (Backup/Local)
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=quantum_trading
POSTGRES_USER=quantum_admin
POSTGRES_PASSWORD=your-strong-postgres-password

# Redis Cache
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your-strong-redis-password
REDIS_DB=0

# =============================================================================
# QUANTUM COMPUTING
# =============================================================================

# IBM Quantum
IBM_QUANTUM_TOKEN=your-ibm-quantum-token
IBM_QUANTUM_BACKEND=ibmq_qasm_simulator

# Quantum Algorithm Settings
QUANTUM_NUM_QUBITS=4
QUANTUM_SHOTS=1024
QUANTUM_CONFIDENCE_THRESHOLD=0.85

# =============================================================================
# AI & MCP SERVERS
# =============================================================================

# Anthropic Claude API
ANTHROPIC_API_KEY=your-anthropic-api-key
CLAUDE_MODEL=claude-3-5-sonnet-20250101
CLAUDE_MAX_TOKENS=4096
CLAUDE_TEMPERATURE=0.7

# =============================================================================
# TRADING PLATFORM
# =============================================================================

# MetaTrader 5
MT5_SERVER=your-broker-server
MT5_LOGIN=your-mt5-login
MT5_PASSWORD=your-mt5-password
MT5_TIMEOUT=10000

# Trading Settings
SIGNAL_PAIRS=EURUSD,GBPUSD,USDJPY,AUDUSD,USDCAD
SIGNAL_TIMEFRAME=H1
SIGNAL_LOOKBACK=100
MIN_RISK_REWARD=2.0

# =============================================================================
# COMMUNICATION SERVICES
# =============================================================================

# Telegram Bot
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_WEBHOOK_URL=https://quantumtrading.ai/api/v1/telegram/webhook
TELEGRAM_WEBHOOK_SECRET=your-webhook-secret

# SendGrid Email
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@quantumtrading.ai
SENDGRID_FROM_NAME=Quantum Trading AI

# Twilio (SMS & WhatsApp)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+27XXXXXXXXX
TWILIO_WHATSAPP_NUMBER=whatsapp:+27XXXXXXXXX

# =============================================================================
# PAYMENT PROCESSING
# =============================================================================

# PayFast (South African Payment Gateway)
PAYFAST_MERCHANT_ID=your-payfast-merchant-id
PAYFAST_MERCHANT_KEY=your-payfast-merchant-key
PAYFAST_PASSPHRASE=your-payfast-passphrase
PAYFAST_MODE=live  # or 'sandbox' for testing

# Subscription Plans (ZAR)
PLAN_BASIC_PRICE=500
PLAN_PRO_PRICE=1200
PLAN_PREMIUM_PRICE=2000

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================

# Prometheus
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Grafana
GRAFANA_PASSWORD=your-strong-grafana-password
GRAFANA_PORT=3000

# Sentry Error Tracking (Optional)
SENTRY_DSN=your-sentry-dsn
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1

# Google Analytics (Optional)
GA_TRACKING_ID=G-XXXXXXXXXX

# =============================================================================
# BETA PROGRAM
# =============================================================================

# Beta Settings
BETA_MAX_TESTERS=10
BETA_DURATION_DAYS=28
BETA_SUCCESSFUL_DISCOUNT=0.50  # 50%
BETA_PARTICIPATED_DISCOUNT=0.30  # 30%

# Success Criteria
BETA_MIN_FEEDBACK=3
BETA_MIN_ENGAGEMENT=0.70
BETA_MIN_SURVEYS=3
BETA_MIN_DAYS_ACTIVE=21

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Features
ENABLE_BETA_PROGRAM=true
ENABLE_AUTOMATED_TRADING=false
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_SIGNAL_OPTIMIZATION=true
ENABLE_AI_SUPPORT=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_API=100/minute
RATE_LIMIT_SIGNALS=20/minute

# =============================================================================
# DEPLOYMENT
# =============================================================================

# Domain
DOMAIN=quantumtrading.ai
FRONTEND_URL=https://quantumtrading.ai
BACKEND_URL=https://quantumtrading.ai/api/v1

# SSL
SSL_ENABLED=true
SSL_CERT_PATH=/etc/nginx/ssl/fullchain.pem
SSL_KEY_PATH=/etc/nginx/ssl/privkey.pem

# Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # 2 AM daily
BACKUP_RETENTION_DAYS=30

# =============================================================================
# COMPLIANCE & PRIVACY
# =============================================================================

# POPIA (South African Privacy Law)
POPIA_COMPLIANT=true
DATA_RETENTION_DAYS=365
CONSENT_REQUIRED=true

# Security
ENABLE_2FA=true
PASSWORD_MIN_LENGTH=8
SESSION_TIMEOUT_MINUTES=60

# =============================================================================
# THIRD-PARTY INTEGRATIONS
# =============================================================================

# Kluster Verification (Optional)
KLUSTER_ENABLED=true
KLUSTER_API_KEY=your-kluster-api-key

# Stripe (Alternative Payment - Optional)
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
STRIPE_SECRET_KEY=your-stripe-secret-key

# =============================================================================
# END OF CONFIGURATION
# =============================================================================

# Notes:
# 1. Replace ALL "your-*" placeholders with actual values
# 2. Use strong, randomly generated passwords (min 32 characters)
# 3. Never commit this file to version control
# 4. Rotate secrets regularly (quarterly recommended)
# 5. Use environment-specific secrets management in production
